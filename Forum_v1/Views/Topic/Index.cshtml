@model IEnumerable<Repository.Entities.Topic>
@using Forum_v1.Controllers


<div class="container-fluid">


    <div class="row pt-3 pb-3">

        <div class="coll mx-3 my-3">
            @Html.ActionLink("Новая тема", "CreateTopic", "Topic", routeValues: null, htmlAttributes: new { @class = "btn btn-dark" })
        </div>


        <div class="coll mx-3 my-3">

            @using (Html.BeginForm("FindTopicByName", "Topic", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-inline">

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.Editor("topicName", new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter topic name here" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Find" class="btn btn-dark" />
                        </div>
                    </div>

                </div>
            }

        </div>

        <div class="coll mx-3 my-3">

            @using (Html.BeginForm("FilterByLastMessageDate", "Topic", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-inline">
                
                    <div class="form-group">
                        
                        <div class="row">

                            <label for="date" class="pr-2">Date of last message from: </label>
                            <input type="date" name="dateOflastMessageFrom">

                        </div>

                    </div>

                    <div class="form-group px-2">

                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Filter" class="btn btn-dark" />
                        </div>

                    </div>

                </div>
            }

        </div>

    </div>



    <div class="row hideMobile">

        <div class="col-xs-12 col-md-8 col-lg-4">

            <div class="row">
                <h5 class="mr-3">№</h5>
                <h5>@Html.DisplayName("Наименование:")</h5>
            </div>

        </div>

        <div class="col-xs-12 col-md-8 col-lg-4">

            <h5>@Html.DisplayName("Описание:")</h5>

        </div>

        <div class="col-xs-12 col-md-8 col-lg-2">

            <h5>@Html.DisplayName("Сообщений:")</h5>

        </div>

        <div class="col-xs-12 col-md-8 col-lg-2">

            <h5>@Html.DisplayName("Последнее:")</h5>

        </div>

    </div>



    @{
        int i = 1;

        foreach (var item in Model)
        {
        <div class="row border-top border-dark">

            <div class="col-xs-12 col-md-8 col-lg-4">

                <div class="row">
                    <h5 class="mr-3">@i</h5>
                    <a href="/Topic/EnterIntoTopic?topic_Id=@item.Id">@Html.DisplayFor(modelItem => item.TopicName)</a>
                </div>

            </div>


            <div class="col-xs-12 col-md-8 col-lg-4">
                <a href="/Topic/EnterIntoTopic?topic_Id=@item.Id">@Html.DisplayFor(modelItem => item.TopicDescription)</a>
            </div>


            <div class="col-xs-12 col-md-8 col-lg-2">
                @Html.DisplayFor(modelItem => item.TopicMessages.Count)
            </div>

            <div class="col-xs-12 col-md-8 col-lg-2">
                @Html.DisplayFor(modelItem => item.DateOfLastMessage)
            </div>

        </div>

            i++;
        }
    }

</div>




