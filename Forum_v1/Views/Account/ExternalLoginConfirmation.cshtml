@model ExternalLoginConfirmationViewModel

@{
    ViewData["Title"] = "Confirm your Email for this site.";
}

<h1>@ViewData["Title"]</h1>

<h4 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h4>
<hr />

<p id="external-login-description" class="text-info">
    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="row">
    <div class="col-md-4">

        @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, true, new { @class = "form-horizontal" }))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        }

        @Html.ActionLink("Cancel", "CancelConfirmation", "Account", new { returnUrl = Model.ReturnUrl }, 
       htmlAttributes: new { @class = "btn btn-warning mx-2 my-2", style = "color:white" })

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
