@model Forum_v1.Models.ManageIndexViewModel


<div id="idManageIndex_1" class="px-5 py-2">


    <p class="text-success">@ViewBag.StatusMessage</p>

    <h3>Изменение параметров учетной записи</h3>
    <hr />

    <div class="container-fluid">

        <div class="row justify-content-start py-2">

            <div class="col-xs-12 col-lg-3 m-3 px-2">

                <form asp-action="LoadImage" asp-controller="Manage" method="post" enctype="multipart/form-data">

                    <label>Картинка</label>
                    
                    <a class='btn btn-link' href='javascript:;'>
                        Выберите файл...
                        <input type="file" name="Avatar" size="40" style="position:absolute; z-index:2; top:0; left:0; filter: alpha(opacity=0); opacity:0;
                                background-color:transparent; color:transparent;" onchange='$("#upload-file-info").html($(this).val());'>
                    </a>

                    <span class='label label-info' id="upload-file-info"></span>

                    <p>
                        <input type="submit" value="Добавить" class="btn btn-dark" />
                    </p>

                </form>
                

                @if (Model.Avatar == null)
                {
                    <div class="form-control-static">Нет картинки</div>
                }

                else
                {
                    <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Avatar))" />
                }

            </div>

            <div class="col-xs-12 col-lg-3 m-3 px-2">

                <h5>@Html.DisplayNameFor(model => model.ClientName) </h5>
                @Html.DisplayFor(model => model.ClientName)

            </div>

            <div class="col-xs-12 col-lg-3 m-3 px-2">

                <h5>@Html.DisplayNameFor(model => model.CompanyName) </h5>
                @Html.DisplayFor(model => model.CompanyName)

            </div>

            <div class="col-xs-12 col-lg-3  m-3 px-2">

                <h5>@Html.DisplayNameFor(model => model.Email)</h5>
                @Html.DisplayFor(model => model.Email)

            </div>
        </div>



        <div class="row justify-content-start py-2">

            <div class="col-xs-12 col-lg-3  m-3 px-2">
                <h5>Регистрационные данные: </h5>
                @Html.ActionLink("Изменить", "ChangeRegisterData", "Manage", routeValues: null, htmlAttributes:
                 new { @class = "btn btn-dark", @style = "font-size: 1.1em" })
            </div>


            <div class="col-xs-12 col-lg-3  m-3 px-2">
                <h5>Изменить пароль: </h5>
                @Html.ActionLink("Изменить пароль", "ChangePassword", "Manage", routeValues: null, htmlAttributes:
                 new { @class = "btn btn-dark", @style = "font-size: 1.1em" })
            </div>


            <div class="col-xs-12 col-lg-3  m-3 px-2">
                <h5>Удалить аккаунт: </h5>
                @Html.ActionLink("Удалить", "Delete", "Account", routeValues: null, htmlAttributes:
                 new { @class = "btn btn-dark", @style = "font-size: 1.1em" })
            </div>

        </div>

    </div>

</div>


