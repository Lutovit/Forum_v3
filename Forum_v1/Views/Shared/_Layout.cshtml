<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Forum_v1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Site.css" />
    <script src="https://use.fontawesome.com/89406ae90f.js"></script>

    <style>

        body, html {
            -webkit-font-smoothing: antialiased;
            -webkit-overflow-scrolling: touch;
        }

        i:hover {
            color: #ff7878;
        }
    </style>

</head>

<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top mt-0">

            <a class="navbar-brand" href="/Home/Index">

                <div class="row px-2">
                    <img src="~/Images/logo1.jpg" width="48" height="30" class="d-inline-block align-self-auto" alt="" loading="lazy">
                </div>

            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <div class="nav-item pr-4">
                    <div class="px-2" style="color: white ; font-size:1.7em;"><b>Astra Forum</b></div>
                </div>

                <ul class="navbar-nav ml-auto ">


                    <li class="nav-item pr-4">
                        @Html.ActionLink("Домашняя страница", "Index", "Home", routeValues: null, htmlAttributes: new { @style = "color:white; font-weight:bold" })
                    </li>

                    <li class="nav-item pr-4">
                        @Html.ActionLink("Форум", "Index", "Topic", routeValues: null, htmlAttributes: new { @style = "color:white; font-weight:bold" })
                    </li>



                </ul>

                @Html.Partial("_LoginPartial")

            </div>

        </nav>

    </header>


    <div class="container-fluid body-content" >

        <div class="container-fluid pad-0" >
            @RenderBody()
        </div>

    </div>


    <div class="container-fluid body-content pt-5">

        <div class="container-fluid footer" id="footer">

            <div class="row justify-content-center" style="font-size:1.0em">

                <p> Designed by Lutovit </p>

            </div>

            <hr />

        </div>

    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>
