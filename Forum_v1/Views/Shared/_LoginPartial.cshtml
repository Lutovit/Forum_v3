@using Microsoft.AspNetCore.Identity

@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()


        <ul class="nav navbar-nav navbar-right">

            <li class="nav-item pr-4">
                @Html.Partial("_AdminPartial")
            </li>

            <li class="pr-4">
                @Html.ActionLink(User.Identity.Name + "!", "Index", "Manage", routeValues: null,
               htmlAttributes: new { title = "Manage", @style = "color:white; font-size: 1em; font-weight:bold;" })
            </li>

            <li class="pr-4"><a href="javascript:document.getElementById('logoutForm').submit()" style="color: white; font-weight: bold;">Выйти</a></li>

        </ul>
    }

}
else
{
    <ul class="nav navbar-nav navbar-right">

        <li>
            @Html.ActionLink("Вход", "Login", "Account", routeValues: null,
       htmlAttributes: new { id = "loginLink", @style = "color:white; font-weight:bold;", @class = "pr-4" })
        </li>

    </ul>
}




